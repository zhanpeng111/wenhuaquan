<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
     android:layout_height="fill_parent" 
    style="@style/day_login_bg"
  xmlns:android="http://schemas.android.com/apk/res/android">
 
    <ScrollView android:id="@+id/id_scroll_view" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
         >
        
        
        
        <LinearLayout android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent">
            
            <RelativeLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="@dimen/padding_medium">
                <ImageView android:layout_width="fill_parent" 
                    android:layout_height="1.0dip" 
                    android:layout_centerInParent="true" 
                    style="@style/day_login_split_line" />
                <TextView android:textSize="@dimen/g_txt_middle" 
                    android:gravity="center_horizontal"
                     android:paddingLeft="@dimen/padding_medium" 
                     android:paddingRight="@dimen/padding_medium"
                      android:layout_width="wrap_content"
                       android:layout_height="wrap_content" 
                       android:text="@string/one_key_login" 
                       android:layout_centerInParent="true" 
                       style="@style/day_login_base_txt" />
            </RelativeLayout>
            
            
            
            <LinearLayout android:orientation="vertical" 
                android:paddingTop="@dimen/padding_medium" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="20.0dip" 
                android:layout_marginRight="20.0dip">
                <RelativeLayout android:id="@+id/wxLayout"
                     android:layout_width="fill_parent"
                      android:layout_height="50.0dip" 
                      style="@style/day_login_btn_wx_style">
                    <ImageView android:background="@color/alpha_black_mask_20_percent"
                         android:padding="@dimen/padding_small"
                          android:layout_width="50.0dip"
                           android:layout_height="50.0dip" 
                           android:src="@drawable/login_wx" 
                           android:scaleType="centerInside" 
                           android:layout_alignParentLeft="true" />
                    <TextView android:gravity="center" 
                        android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                          android:layout_marginLeft="10.0dip" 
                          android:layout_marginTop="10.0dip" 
                          android:layout_marginBottom="10.0dip" 
                          android:text="使用微信帐号" 
                          android:layout_centerInParent="true" 
                          style="@style/login_btn_style_base" />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/qqLayout" 
                    android:layout_width="fill_parent" android:layout_height="50.0dip" android:layout_marginTop="@dimen/padding_small"
                     style="@style/day_login_btn_qq_style">
                    <ImageView android:background="@color/alpha_black_mask_20_percent"
                         android:padding="@dimen/padding_small" 
                         android:layout_width="50.0dip" 
                         android:layout_height="50.0dip" 
                         android:src="@drawable/login_qq" 
                         android:scaleType="centerInside" 
                         android:layout_alignParentLeft="true" />
                    <TextView android:gravity="center" 
                        android:layout_width="fill_parent" 
                        android:layout_height="fill_parent" 
                        android:layout_marginLeft="10.0dip" 
                        android:layout_marginTop="10.0dip" 
                        android:layout_marginBottom="10.0dip"
                         android:text="使用QQ帐号"
                          android:layout_centerInParent="true" 
                        style="@style/login_btn_style_base" />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/sinaLayout" 
                    android:layout_width="fill_parent" 
                    android:layout_height="50.0dip" 
                    android:layout_marginTop="@dimen/padding_small" 
                    style="@style/day_login_btn_weibo_style">
                    <ImageView android:background="@color/alpha_black_mask_20_percent" 
                        android:padding="@dimen/padding_small" 
                        android:layout_width="50.0dip" android:layout_height="50.0dip" 
                        android:src="@drawable/login_weibo" 
                        android:scaleType="centerInside" android:layout_alignParentLeft="true" />
                    <TextView android:gravity="center"
                         android:layout_width="fill_parent" 
                         android:layout_height="fill_parent" 
                         android:layout_marginLeft="10.0dip" 
                         android:layout_marginTop="10.0dip" 
                         android:layout_marginBottom="10.0dip" 
                         android:text="使用微博帐号" 
                         android:layout_centerInParent="true"
                          style="@style/login_btn_style_base" />
                </RelativeLayout>
            </LinearLayout> 
            
            <RelativeLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="10.0dip" 
                android:layout_marginBottom="@dimen/padding_medium">
                <ImageView android:layout_width="fill_parent" 
                    android:layout_height="1.0dip" 
                    android:layout_centerInParent="true" 
                    style="@style/day_login_split_line" />
                <TextView android:paddingLeft="@dimen/padding_medium" 
                    android:paddingRight="@dimen/padding_medium" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="使用文化驿站帐号登录" 
                    android:layout_centerInParent="true" 
                    style="@style/day_login_base_txt" />
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" 
                android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="20.0dip" android:layout_marginRight="20.0dip">
                <LinearLayout android:orientation="vertical" 
                    android:id="@+id/id_input_group" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <EditText android:id="@+id/userName" 
                        android:hint="邮箱 / 昵称" android:singleLine="true" 
                        style="@style/EditText" />
                    <EditText android:id="@+id/passwd"
                         android:layout_marginTop="10.0dip" 
                        android:hint="密码" 
                        android:password="true" 
                        android:singleLine="true" 
                        android:inputType="textPassword" 
                        style="@style/EditText" />
                </LinearLayout>
                <Button android:id="@+id/id_btn_login" 
                    android:layout_width="fill_parent" 
                    android:layout_height="50.0dip" 
                    android:layout_marginTop="@dimen/padding_small" 
                    android:text="登 录" 
                    style="@style/day_login_btn_style" />
                <TextView android:gravity="left"
                     android:id="@+id/question" 
                    android:padding="10.0dip" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="忘记密码?" 
                    style="@style/day_login_base_txt" />
            </LinearLayout>
            
            
         
        </LinearLayout>
    </ScrollView>
</RelativeLayout>